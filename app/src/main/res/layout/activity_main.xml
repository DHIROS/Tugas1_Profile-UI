<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.appcompat.widget.Toolbar
        android:background="#FF7F91"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:background="@drawable/kiri"
                android:layout_width="30dp"
                android:layout_height="30dp"></Button>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></LinearLayout>
            <Button
                android:background="@drawable/menu"
                android:layout_width="30dp"
                android:layout_height="30dp"></Button>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/background_orange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/profile"
                android:layout_width="70dp"
                android:layout_height="60dp"></ImageView>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textSize="22dp"
                    android:text="DHIROS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"
                    android:drawableLeft="@drawable/lokasi"
                    android:text=" Malang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
            <Button
                android:textAllCaps="false"
                android:backgroundTint="#FFFFFF"
                android:text="Follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:text="684"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></TextView>
                    <TextView
                        android:textSize="12dp"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:text="FOLLOWING"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:text="3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></TextView>
                    <TextView
                        android:textSize="12dp"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:text="APPLICATION"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:text="1K"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></TextView>
                    <TextView
                        android:textSize="12dp"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:text="FOLLOWERS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></TextView>
                </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:padding="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:textStyle="bold"
            android:text="Apps"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <HorizontalScrollView
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="#03fcad"
                    android:background="@drawable/background"
                    android:layout_width="150dp"
                    android:layout_height="100dp">
                   <ImageView
                       android:layout_marginTop="10dp"
                       android:layout_weight="1"
                       android:src="@drawable/netflix"
                       android:layout_width="80dp"
                       android:layout_height="80dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="#fcce03"
                    android:background="@drawable/background"
                    android:layout_width="150dp"
                    android:layout_height="100dp">
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:src="@drawable/spotify"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="#03e3fc"
                    android:background="@drawable/background"
                    android:layout_width="150dp"
                    android:layout_height="100dp">
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:src="@drawable/instagram"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
    <LinearLayout
        android:padding="40dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="90dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#52514c"
            android:background="@drawable/background"
            android:layout_width="150dp"
            android:layout_height="45dp">
            <TextView
                android:layout_marginTop="5dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:padding="10dp"
                android:gravity="center"
                android:text="LOGOUT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>